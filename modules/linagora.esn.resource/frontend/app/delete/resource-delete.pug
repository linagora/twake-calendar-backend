.modal.full-screen(tabindex="-1", role="dialog")
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title #{__('Confirmation')}
      .modal-body
        span #{__('Remove the resource')} {{ctrl.resource.name}}
      .modal-footer
        button.btn.btn-default(type="button", ng-click="$hide()") #{__('Cancel')}
        button.btn.btn-danger(type="button", ng-click="ctrl.onDelete(); $hide()") #{__('Remove')}