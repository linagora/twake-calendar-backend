mjml
  mj-head
    mj-attributes
      mj-all(font-family='Roboto')
    include ./style.pug
    mj-style(inline='inline')
      if (content.rawInviteMessage === 'has accepted this invitation')
        | .reply-title-container { background: #deffe1; border-radius: 4px; border: 1px solid #deffe1; }
      else if (content.rawInviteMessage === 'has replied "Maybe" to this invitation')
        | .reply-title-container { background: #fffcde; border-radius: 4px; border: 1px solid #fffcde; }
      else if (content.rawInviteMessage === 'has declined this invitation')
        | .reply-title-container { background: #ffdede; border-radius: 4px; border: 1px solid #ffdede; }
      else
        | .reply-title-container { background: #deffe1; border-radius: 4px; border: 1px solid #deffe1; }
  include ./body.pug
